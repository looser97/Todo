<div style = "width: 500px ; margin : auto ; margin-top : 100px;">
        <!-- Default form register -->
            <form class="text-center border border-light p-5" action="/users/register" method="POST">
    
                <p class="h4 mb-4">Sign up</p>
            
                <div class="form-row mb-4">
                    <div class="col">
                        <!-- First name -->
                        <input type="text" name="first_name"  class="form-control" placeholder="First name" value="<%= typeof first_name != 'undefined' ? first_name : '' %>" required
                        >
                        
                    </div>
                    <div class="col">
                        <!-- Last name -->
                        <input type="text" name="last_name" class="form-control" placeholder="Last name" value="<%= typeof last_name != 'undefined' ? last_name : '' %>" required>
                    </div>
                </div>
            
                <!-- E-mail -->
                <input type="email" name="email" class="form-control mb-4" placeholder="E-mail" value="<%= typeof email != 'undefined' ? email : '' %>" required>
            
                <!-- Password -->
                <input type="password" name="password" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                <small id="password" class="form-text text-muted mb-4"></small>
                </small>
            
                <!-- Phone number -->
                <input type="text" name="Phone" class="form-control" placeholder="Phone number" aria-describedby="defaultRegisterFormPhoneHelpBlock" value="<%= typeof Phone != 'undefined' ? Phone : '' %>" required>
                <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
                </small>
            
            
                <!-- Sign up button -->
                <button class="btn btn-info my-4 btn-block" type="submit" name="signup">Sign Up</button>
                
                <!--If already have an account-->
                <p>If you already have an account</p>
                        <a href="/users/login">Sign In</a>
    
        
            </form>
        </div>
        <!-- Default form register -->